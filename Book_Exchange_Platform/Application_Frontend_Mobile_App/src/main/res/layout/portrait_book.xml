<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".Portrait_Book">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/blacks"
                android:elevation="4dp"
                android:layout_marginBottom="60dp"
                >

                <ImageButton
                    android:id="@+id/toolbarNavigationButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/round_nav_button"
                    android:padding="6dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/menu_three_outlined_rounded_lines_symbol" />

                <!-- Centered TextView -->
                <TextView
                    android:id="@+id/toolbarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/helvetica"
                    android:text="Book Registration"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.Toolbar>


            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    android:layout_marginRight="1dp"
                    android:padding="10dp"
                    android:src="@drawable/book"
                    android:background="@drawable/rounded_background_left"
                    android:backgroundTint="#00E2FF"
                    android:contentDescription="mwo" />
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/rounded_background_right"
                    android:backgroundTint="@color/black"
                    android:gravity="center"
                    android:textColor="@color/cyan"
                    android:fontFamily="@font/helvetica"
                    android:textSize="20dp"
                    android:hint="Book Name"
                    android:textColorHint="#777777"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    android:layout_marginRight="1dp"
                    android:padding="10dp"
                    android:src="@drawable/language"
                    android:background="@drawable/rounded_background_left"
                    android:backgroundTint="#00E2FF"
                    android:contentDescription="mwo" />
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/rounded_background_right"
                    android:backgroundTint="@color/black"
                    android:gravity="center"
                    android:textColor="@color/cyan"
                    android:fontFamily="@font/helvetica"
                    android:textSize="20dp"
                    android:hint="Book Language"
                    android:textColorHint="#777777"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    android:layout_marginRight="1dp"
                    android:padding="10dp"
                    android:src="@drawable/genres"
                    android:background="@drawable/rounded_background_left"
                    android:backgroundTint="#00E2FF"
                    android:contentDescription="mwo" />
                <Spinner
                    android:layout_weight="1"
                    android:id="@+id/genre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/rounded_background_right"
                    android:backgroundTint="@color/black"
                    android:gravity="center"
                    android:textColor="@color/cyan"
                    android:fontFamily="@font/helvetica"
                    android:textSize="20dp"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    android:layout_marginRight="1dp"
                    android:padding="10dp"
                    android:src="@drawable/qrcode"
                    android:background="@drawable/rounded_background_left"
                    android:backgroundTint="#00E2FF"
                    android:contentDescription="mwo" />
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/isbn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/rounded_background_right"
                    android:backgroundTint="@color/black"
                    android:gravity="center"
                    android:textColor="@color/cyan"
                    android:fontFamily="@font/helvetica"
                    android:textSize="20dp"
                    android:hint="ISBN Code(Optional)"
                    android:textColorHint="#777777"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    android:layout_marginRight="1dp"
                    android:padding="10dp"
                    android:src="@drawable/author"
                    android:background="@drawable/rounded_background_left"
                    android:backgroundTint="#00E2FF"
                    android:contentDescription="mwo" />
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/rounded_background_right"
                    android:backgroundTint="@color/black"
                    android:gravity="center"
                    android:textColor="@color/cyan"
                    android:fontFamily="@font/helvetica"
                    android:textSize="20dp"
                    android:hint="Author(Optional)"
                    android:textColorHint="#777777"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    android:layout_marginRight="1dp"
                    android:padding="10dp"
                    android:src="@drawable/edit"
                    android:background="@drawable/rounded_background_left"
                    android:backgroundTint="#00E2FF"
                    android:contentDescription="mwo" />
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/edition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/rounded_background_right"
                    android:backgroundTint="@color/black"
                    android:gravity="center"
                    android:textColor="@color/cyan"
                    android:fontFamily="@font/helvetica"
                    android:textSize="20dp"
                    android:hint="Edition(Optional)"
                    android:textColorHint="#777777"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    android:layout_marginRight="1dp"
                    android:padding="10dp"
                    android:src="@drawable/datecalendar"
                    android:background="@drawable/rounded_background_left"
                    android:backgroundTint="#00E2FF"
                    android:contentDescription="mwo" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Book Purchase Date"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_background_top_right"
                        android:backgroundTint="@color/black"
                        android:gravity="center"
                        android:padding="10dp"
                        android:textColor="@color/cyan"
                        android:fontFamily="@font/helvetica"
                        android:textSize="15dp"
                        android:textColorHint="#777777"
                        />
                    <DatePicker
                        android:datePickerStyle="@style/DatePickerStyle"
                        android:id="@+id/purchasedate"
                        android:background="@drawable/rounded_background_bottom_right"
                        style="@style/CustomDatePicker"
                        android:layout_weight="1"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    android:layout_marginRight="1dp"
                    android:padding="10dp"
                    android:src="@drawable/books"
                    android:background="@drawable/rounded_background_left"
                    android:backgroundTint="#00E2FF"
                    android:contentDescription="mwo" />
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/copycount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/rounded_background_right"
                    android:backgroundTint="@color/black"
                    android:gravity="center"
                    android:textColor="@color/cyan"
                    android:fontFamily="@font/helvetica"
                    android:textSize="20dp"
                    android:hint="Copy Count"
                    android:inputType="number"
                    android:textColorHint="#777777"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    android:layout_marginRight="1dp"
                    android:padding="10dp"
                    android:src="@drawable/quality"
                    android:background="@drawable/rounded_background_left"
                    android:backgroundTint="#00E2FF"
                    android:contentDescription="mwo" />
                <Spinner
                    android:layout_weight="1"
                    android:id="@+id/condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/rounded_background_right"
                    android:backgroundTint="@color/black"
                    android:gravity="center"
                    android:textColor="@color/cyan"
                    android:fontFamily="@font/helvetica"
                    android:textSize="20dp"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/bookregister"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="60dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:text="Register Book"
                android:fontFamily="@font/helvetica"
                android:background="@drawable/rounded_background"
                android:backgroundTint="@color/blacks"
                android:shadowDx="4"
                android:shadowDy="10"
                android:textColor="@color/white"
                android:textSize="15dp">
            </Button>
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        android:background="@color/blackss"
        app:itemTextAppearance="@style/NavigationItemTextStyle"
        />
</androidx.drawerlayout.widget.DrawerLayout>


